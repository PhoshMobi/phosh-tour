<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>mobi.phosh.PhoshTour</id>
  <!-- Translators @BRAND@ is substitution variable and must not be translated, it is the brand of a device (e.g. Librem 5) -->
  <name>@BRAND@ Tour</name>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <description>
    <p>
      This apps introduces you to your device via a small graphical tour.
    </p>
  </description>
  <!-- Translators @BRAND@ is substitution variable and must not be translated, it is the brand of a device (e.g. Librem 5) -->
  <summary>@BRAND@ graphical tour</summary>
  <replaces>
      <id>sm.puri.PhoshTour</id>
  </replaces>

  <content_rating type="oars-1.1"/>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <launchable type="desktop-id">mobi.phosh.PhoshTour.desktop</launchable>

  <url type="homepage">https://gitlab.gnome.org/World/Phosh/phosh-tour</url>
  <url type="bugtracker">https://gitlab.gnome.org/World/Phosh/phosh-tour/issues</url>

  <screenshots>
    <screenshot type="default">
      <caption>The Tour's first page</caption>
      <image>https://gitlab.gnome.org/World/Phosh/phosh-tour/-/raw/main/screenshots/first-page.png?inline=false</image>
    </screenshot>
    <screenshot type="default">
      <caption>The Tour's swipe gesture page</caption>
      <image>https://gitlab.gnome.org/World/Phosh/phosh-tour/-/raw/main/screenshots/swipe.png?inline=false</image>
    </screenshot>
  </screenshots>

  <releases>
    <release version="0.41.0" date="2024-08-15">
      <description translate="no"><p>Add RU translation</p></description>
    </release>

    <release version="0.39.0" date="2024-05-14">
      <description translate="no"><p>Fix broken power menu when font is missing</p></description>
    </release>

    <release version="0.38.0" date="2024-04-05">
      <description translate="no"><p>Fix blurry images</p></description>
    </release>

    <release version="0.37.0" date="2024-04-06">
      <description translate="no"><p>Allow for hardware specific pages</p></description>
    </release>

    <release version="0.36.0" date="2024-02-02">
      <description translate="no"><p>Improve keyboard navigation</p></description>
    </release>

    <release version="0.35.0" date="2024-01-01">
      <description translate="no"><p>Add a new page explaining how to unfold the on screen keyboard</p></description>
    </release>

    <release version="0.28.0" date="2023-05-29">
      <description translate="no"><p>Add a new page for the power-button menu</p></description>
    </release>

    <release version="0.25.0" date="2023-02-28">
      <description translate="no"><p>Update quicksettings page to match Phosh's new layout</p></description>
    </release>

    <release version="0.24.0" date="2023-01-28">
      <description translate="no"><p>Various fixes</p></description>
    </release>

    <release version="0.23.0" date="2023-01-11">
      <description translate="no"><p>Fix metainfo issues</p></description>
    </release>

    <release version="0.21.0" date="2022-09-08">
      <description translate="no"><p>Initial release</p></description>
    </release>
  </releases>
</component>
